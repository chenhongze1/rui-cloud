# RUI Cloud Docker 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# ===========================================
# 基础配置
# ===========================================

# 项目名称前缀
COMPOSE_PROJECT_NAME=rui-cloud

# 网络配置
NETWORK_SUBNET=172.20.0.0/16

# ===========================================
# MySQL 配置
# ===========================================

# MySQL 版本
MYSQL_VERSION=8.0

# MySQL 端口
MYSQL_PORT=3306

# MySQL 数据库配置
MYSQL_ROOT_PASSWORD=123456
MYSQL_DATABASE=rui_demo
MYSQL_USER=rui
MYSQL_PASSWORD=rui123

# MySQL 时区
MYSQL_TZ=Asia/Shanghai

# ===========================================
# Redis 配置
# ===========================================

# Redis 版本
REDIS_VERSION=7-alpine

# Redis 端口
REDIS_PORT=6379

# Redis 密码（留空表示无密码）
REDIS_PASSWORD=

# ===========================================
# Nginx 配置
# ===========================================

# Nginx 版本
NGINX_VERSION=alpine

# Nginx 端口
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# 后端应用地址
BACKEND_HOST=host.docker.internal
BACKEND_PORT=8080

# ===========================================
# 监控组件配置
# ===========================================

# Jaeger 配置
JAEGER_VERSION=latest
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_HTTP_PORT=14268
JAEGER_COLLECTOR_GRPC_PORT=14250

# Zipkin 配置
ZIPKIN_VERSION=latest
ZIPKIN_PORT=9411

# Prometheus 配置
PROMETHEUS_VERSION=latest
PROMETHEUS_PORT=9090

# Grafana 配置
GRAFANA_VERSION=latest
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# ===========================================
# 数据卷配置
# ===========================================

# 数据卷路径（相对于项目根目录）
MYSQL_DATA_PATH=./docker/data/mysql
REDIS_DATA_PATH=./docker/data/redis
PROMETHEUS_DATA_PATH=./docker/data/prometheus
GRAFANA_DATA_PATH=./docker/data/grafana

# ===========================================
# 日志配置
# ===========================================

# 日志级别
LOG_LEVEL=INFO

# 日志路径
LOGS_PATH=./docker/logs

# ===========================================
# 开发环境配置
# ===========================================

# 是否启用开发模式
DEV_MODE=true

# 是否启用调试
DEBUG_MODE=false

# 是否启用热重载
HOT_RELOAD=true

# ===========================================
# 安全配置
# ===========================================

# JWT 密钥
JWT_SECRET=ruiFrameworkJwtSecretKey2024

# 加密密钥
ENCRYPTION_KEY=ruiFrameworkAESKey2024

# ===========================================
# 性能配置
# ===========================================

# MySQL 连接池配置
MYSQL_MAX_CONNECTIONS=200
MYSQL_INNODB_BUFFER_POOL_SIZE=256M

# Redis 内存配置
REDIS_MAX_MEMORY=256mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# Nginx 工作进程数
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# ===========================================
# 监控配置
# ===========================================

# Prometheus 数据保留期
PROMETHEUS_RETENTION_TIME=15d

# 指标收集间隔
METRICS_SCRAPE_INTERVAL=15s

# 告警评估间隔
ALERT_EVALUATION_INTERVAL=15s